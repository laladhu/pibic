<?xml version='1.0' encoding='utf-8'?>
<widget id="br.ana.video" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Matemática em Vídeos</name>
    <description>
        Aplicativo de consulta de vídeos matemáticos. 
    </description>
    <author email="laladhu@gmail.com">
        Ana Laura Honório Silva
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/img/a1.png" />
        <icon density="mdpi" src="www/img/a2.png" />
        <icon density="hdpi" src="www/img/a3.png" />
        <icon density="xhdpi" src="www/img/a4.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <engine name="browser" spec="^4.1.0" />
    <engine name="ios" spec="~4.4.0" />
    <plugin name="cordova-plugin-console" spec="^1.0.7" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
